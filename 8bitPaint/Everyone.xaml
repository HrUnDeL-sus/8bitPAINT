<UserControl x:Class="_8bitPaint.Everyone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_8bitPaint"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="500">
    <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="InfoTextBlock" Text=""/>
            <TextBlock Text="каждые:" x:Name="EveryoneTextBox"/>
            <TextBox MinWidth="32" MaxWidth="64" x:Name="TextBoxDate" KeyUp="TextBoxDate_KeyUp"/>
            <ComboBox x:Name="TimeCombox" SelectedIndex="0">
                <ComboBoxItem>
                <TextBlock Text="секунд" x:Name="TimeComboxItemSecond" />
                </ComboBoxItem>
                <ComboBoxItem>
                <TextBlock Text="минут" x:Name="TimeComboxItemMinute"/>
                </ComboBoxItem>
            <ComboBoxItem>
                <TextBlock Text="часов" x:Name="TimeComboxItemHour"/>
            </ComboBoxItem>
        </ComboBox>
        </StackPanel>
</UserControl>
